//@version=5
    strategy("ZOMATO_Strategy", 
        overlay=true, 
        initial_capital=100000, 
        default_qty_type=strategy.percent_of_equity, 
        default_qty_value=100)

    // Input Parameters
    var float stop_loss = 2
    var float take_profit = 4

    // Indicator Declarations
    var float sma_20 = ta.sma(close, 20)
    var float rsi_14 = ta.rsi(close, 14)

// Entry Conditions
    var bool longCondition = ta.crossover(close, sma_20)
    var bool exitCondition = rsi > 70

    if (longCondition)
        strategy.entry("Long", strategy.long)

    if (exitCondition)
        strategy.close("Long")

    // Add stop loss and take profit
    strategy.exit("Exit", "Long", 
        stop=strategy.position_avg_price * (1 - stop_loss/100),
        limit=strategy.position_avg_price * (1 + take_profit/100))